<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:layout_margin="20dp"
    android:background="@drawable/home_screen_card_background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_toRightOf="@+id/as"
            android:layout_width="160dp"
            android:layout_height="132dp"
            android:layout_gravity="right"
            android:src="@drawable/daily_update_image"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/as"
            android:fontFamily="@font/alegreya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily \nCheckin"
            android:textColor="#FFF"
            android:textSize="35sp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="26dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/alegreya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Record "
            android:textSize="18sp"/>
        <TextView
            android:fontFamily="@font/alegreya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="your "
            android:textSize="18sp"/>
        <TextView
            android:fontFamily="@font/alegreya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="mood, emotions and energy "
            android:textSize="18sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/checkIn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:onClick="checkIn"
        android:textColor="@color/white"
        android:background="@drawable/button_daily_checkin"/>

</LinearLayout>