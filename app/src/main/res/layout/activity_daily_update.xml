<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dailyUpdateActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_screen_card_background"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="How are you feeling today?"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <GridLayout
                    android:id="@+id/smilyGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:columnCount="5"
                    android:isScrollContainer="true"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <ImageView
                        android:id="@+id/smile0"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:onClick="SmilyTap"
                        android:src="@drawable/s1"
                        android:tag="0" />

                    <ImageView
                        android:id="@+id/smile1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="SmilyTap"
                        android:src="@drawable/s2"
                        android:tag="1" />

                    <ImageView
                        android:id="@+id/smile2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="SmilyTap"
                        android:src="@drawable/s3"
                        android:tag="2" />

                    <ImageView
                        android:id="@+id/smile3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="SmilyTap"
                        android:src="@drawable/s4"
                        android:tag="3" />

                    <ImageView
                        android:id="@+id/smile4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="SmilyTap"
                        android:src="@drawable/s5"
                        android:tag="4" />
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/home_screen_card_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="How much energy did you have today?"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/q1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/q1"
                        android:onClick="EnergyTap"
                        android:tag="0"
                        android:layout_marginRight="50dp"/>
                    <ImageView
                        android:id="@+id/q2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="EnergyTap"
                        android:tag="1"
                        android:src="@drawable/q2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Energized"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="50dp"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/q3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/q3"
                        android:onClick="EnergyTap"
                        android:tag="2"
                        android:layout_marginRight="50dp"/>
                    <ImageView
                        android:id="@+id/q4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="EnergyTap"
                        android:tag="3"
                        android:src="@drawable/q4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="50dp"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Exhausted"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/home_screen_card_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="How much energy did you have today?"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/a1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/a1"
                        android:onClick="SocialTap"
                        android:tag="0"
                        android:layout_marginRight="50dp"/>
                    <ImageView
                        android:id="@+id/a2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="SocialTap"
                        android:tag="1"
                        android:src="@drawable/a2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Sociable"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="50dp"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Withdrawn"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/a3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/a3"
                        android:onClick="SocialTap"
                        android:tag="2"
                        android:layout_marginRight="50dp"/>
                    <ImageView
                        android:id="@+id/a4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:onClick="SocialTap"
                        android:tag="3"
                        android:src="@drawable/a4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Conflict"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="50dp"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Supportive"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:onClick="Submit"
                android:layout_marginVertical="20dp"
                android:background="@drawable/shape_center_transparent_stroke_darktheme"
                android:textColor="@color/theme_background"
                android:text="Submit"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>