<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/theme_background_extra_light"
    tools:context=".GratitudeActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_alternate"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/answer"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/square_transparent_center"
        android:textColor="@color/theme_text_green"
        android:gravity="top|start"
        android:textSize="18sp"
        android:inputType="textMultiLine"
        android:hint="Answer here"
        android:visibility="invisible"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/submit"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:onClick="submit"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:background="@drawable/shape_center_theme"/>

</LinearLayout>